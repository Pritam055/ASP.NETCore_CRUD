@model CRUDproject.Models.Student

@{
    ViewData["Title"] = "Create";
}

<h1>Add New Student</h1>
<hr />

<form method="post" asp-controller="Student" asp-action="Create">

    <label for="Name">Name</label>
    <input type="text" name="Name" asp-for="Name" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <br /><br />
    <label for="Rollno">Roll no.</label>
    <input type="text" name="Rollno" asp-for="Rollno" />
    <span asp-validation-for="Rollno" class="text-danger"></span>
    <br /><br />
    <label for="Address">Address</label>
    <input type="text" name="Address" asp-for="Address" />
    <span asp-validation-for="Address" class="text-danger"></span>
    <br /><br />
    <input type="submit" value="Add Student" class="btn btn-success" />
    <br /><br />
    <a asp-action="Index" asp-controller="Student" class="btn btn-outline-secondary">Back</a>

</form>
