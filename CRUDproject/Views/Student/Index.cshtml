@model IEnumerable<CRUDproject.Models.Student>
 
@{
    ViewData["Title"] = "Index";
    int counter =1;
}

<h1>Student Index Page</h1>
<hr />
 
<a asp-controller="Student" asp-action="Create" class="btn btn-primary">Add New Student</a><br /><br />
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <td>S.N.</td>
            <td>Name</td>
            <td>Roll no.</td>
            <td>Address</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>

        @foreach(var obj in Model)
        {
            <tr>
                <td>@counter</td>
                <td>@obj.Name</td>
                <td>@obj.Rollno</td>
                <td>@obj.Address</td>
                <td>
                    <a class="btn btn-info" asp-route-Id="@obj.Id" asp-controller="Student" asp-action="Edit">Edit</a>
                    <a class="btn btn-danger" asp-route-Id="@obj.Id"  asp-controller="Student" asp-action="Delete">Delete</a>
                </td>
            </tr>
            counter++;
        }

    </tbody>
</table>
